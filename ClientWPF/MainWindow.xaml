<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мониторинг системы" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Панель подключения -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="serverComboBox" Width="100" Margin="0,0,10,0">
                <ComboBoxItem Content="Сервер 1 (12345)"/>
                <ComboBoxItem Content="Сервер 2 (12346)"/>
            </ComboBox>
            <Button x:Name="connectBtn" Content="Подключиться" Width="100" Click="ConnectBtn_Click"/>
        </StackPanel>

        <!-- Область вывода информации -->
        <TextBox x:Name="outputTextBox" Grid.Row="1" Margin="10" 
                 IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

        <!-- Панель управления -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="updateBtn" Content="Обновить данные" Width="120" Margin="0,0,10,0" Click="UpdateBtn_Click"/>
            <Button x:Name="loadBtn" Content="Нагрузка GPU" Width="120" Margin="0,0,10,0" Click="LoadBtn_Click"/>
            <Button x:Name="hideBtn" Content="Скрыть сервер" Width="120" Click="HideBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>