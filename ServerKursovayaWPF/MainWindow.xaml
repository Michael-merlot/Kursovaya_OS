<Window x:Class="WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF Client" Height="1000" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- TextBox для логирования -->
        <TextBox Name="LogTextBox" 
                 Grid.Row="0" 
                 Margin="10,10,10,65" 
                 IsReadOnly="True" 
                 VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" Grid.RowSpan="2"/>

        <!-- StackPanel для кнопок -->
        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="10">
            <Button Name="UpdateButton" Content="Update" Width="100" Height="40" Margin="5" Click="UpdateButton_Click"/>
            <Button Name="LoadButton" Content="Load" Width="100" Height="40" Margin="5" Click="LoadButton_Click"/>
            <Button Name="ExitButton" Content="Exit" Width="100" Height="40" Margin="5" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
